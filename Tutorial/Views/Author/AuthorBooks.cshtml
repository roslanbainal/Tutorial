@model IEnumerable<BookViewModel>
@{
    ViewData["Title"] = "AuthorBooks";
}

<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="table_container" class="table table-sm table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>#</th>
                            <th>Book Name</th>
                            <th>Category</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var i = 1;}
                        @foreach (var item in Model)
                        {
                            var createdat = item.CreatedAt.ToString("dd/MM/yyyy");
                            <tr>
                                <td>@i</td>
                                <td>@item.BookName</td>
                                <td>@String.Join(",", item.CategoryName)</td>
                                <td>@createdat</td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


